root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = tab
tab_width = 2
trim_trailing_whitespace = true
max_line_length = 100
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false
max_line_length = off

[*.json]
insert_final_newline = false
indent_style = space
indent_size = 2

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.sh]
end_of_line = lf

[*.{cmd,bat}]
end_of_line = crlf

[**.min.js]
indent_style = space
insert_final_newline = false
